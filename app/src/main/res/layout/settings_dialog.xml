<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_color"
    android:padding="@dimen/_8sdp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        app:civ_border_color="@color/orange"
        app:civ_border_width="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:padding="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/settings_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:hint="Full Name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/settings_image"
        android:gravity="center"
        android:textColorHint="@color/orange"
        android:textColor="@color/orange"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"/>

    <TextView
        android:id="@+id/settings_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        app:layout_constraintTop_toBottomOf="@id/settings_name"
        android:gravity="center"
        android:textColorHint="@color/orange"
        android:textColor="@color/orange"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"/>

    <EditText
        android:id="@+id/settings_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:hint="Phone"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/settings_email"
        android:gravity="center"
        android:textColorHint="@color/orange"
        android:textColor="@color/orange"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"/>

    <EditText
        android:id="@+id/settings_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/settings_phone"
        android:gravity="center"
        android:textColorHint="@color/orange"
        android:textColor="@color/orange"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settings_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_btn"
        android:text="Update profile"
        android:textStyle="bold"
        android:textSize="@dimen/_16ssp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/settings_password"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>